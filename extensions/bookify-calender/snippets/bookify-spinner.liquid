<style>
    .bookify_spinner_show {
        display: flex !important;
        justify-content: center;
        align-items: center;
    }

    .bookify_spinner {
        display: none;
        position: relative;
        height: 40px;
    }

    .bookify_spinner div {
        box-sizing: border-box;
        display: block;
        position: absolute;
        width: 20px;
        height: 20px;
        border: 2px solid black;
        border-radius: 50%;
        animation: spin 1.2s cubic-bezier(0.5, 0, 0.5, 1) infinite;
        border-color: black transparent transparent transparent;
    }

    .bookify_spinner div:nth-child(1) {
        animation-delay: -0.45s;
    }

    .bookify_spinner div:nth-child(2) {
        animation-delay: -0.3s;
    }

    .bookify_spinner div:nth-child(3) {
        animation-delay: -0.15s;
    }

    @keyframes spin {
        0% {
            transform: rotate(0deg);
        }

        100% {
            transform: rotate(360deg);
        }
    }
</style>


<div class="bookify_spinner">
    <div></div>
    <div></div>
    <div></div>
    <div></div>
</div>
